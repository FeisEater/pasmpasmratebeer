<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', breweries_path(order:"name") %> </th>
      <th> <%= link_to 'Year', breweries_path(order:"year") %> </th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <!--td><%= link_to 'Show', brewery %></td--!>
        <td><%= link_to('Edit', edit_brewery_path(brewery), class: "btn btn-default") if current_user %></td>
        <td><%= link_to('Destroy', brewery, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }) if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

